# Environment variables for GreenLink production deployment
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-super-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database Configuration
# Replace with your actual database URL from your hosting provider
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# For Neon Database (if using):
# DATABASE_URL=postgresql://neondb_owner:npg_vuCQ7EZY2sJR@ep-wandering-butterfly-a1ngn41l-pooler.ap-southeast-1.aws.neon.tech:5432/neondb?sslmode=require

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@green.ac.bd
EMAIL_HOST_PASSWORD=your-app-password

# Email Settings
DEFAULT_FROM_EMAIL=GreenLink <noreply@green.ac.bd>
SERVER_EMAIL=server@green.ac.bd

# Redis Configuration (if using Redis for caching/channels)
REDIS_URL=redis://localhost:6379

# Security Settings (for HTTPS deployments)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Sentry (optional - for error monitoring)
SENTRY_DSN=your-sentry-dsn-here
